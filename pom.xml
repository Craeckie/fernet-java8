<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.macasaet.fernet</groupId>
  <artifactId>fernet-java8</artifactId>
  <packaging>jar</packaging>
  <version>0.1.0-SNAPSHOT</version>
  <name>fernet-java8</name>
  <url>https://github.com/l0s/fernet-java8</url>
  <licenses>
    <license>
      <name>Apache License, Version 2.0</name>
      <url>https://raw.githubusercontent.com/l0s/fernet-java8/master/LICENSE</url>
      <distribution>repo</distribution>
    </license>
  </licenses>
  <developers>
    <developer>
      <id>l0s</id>
      <name>Carlos Macasaet</name>
    </developer>
  </developers>
  <properties>
    <maven.compiler.source>1.8</maven.compiler.source>
    <maven.compiler.target>1.8</maven.compiler.target>
  </properties>
  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.12</version>
      <scope>test</scope>
    </dependency>
    <dependency>
    	<groupId>org.mockito</groupId>
    	<artifactId>mockito-core</artifactId>
    	<version>2.8.9</version>
    	<scope>test</scope>
    </dependency>
    <dependency>
    	<groupId>org.glassfish.jersey.containers</groupId>
    	<artifactId>jersey-container-servlet-core</artifactId>
    	<version>2.25.1</version>
    	<scope>test</scope>
    </dependency>
  </dependencies>
  <scm>
  	<url>https://github.com/l0s/fernet-java8.git</url>
  </scm>
  <ciManagement>
  	<system>Travis CI</system>
  	<url>https://travis-ci.org/l0s/fernet-java8/</url>
  </ciManagement>
  <build>
    <plugins>
	  <plugin>
	    <groupId>org.pitest</groupId>
	    <artifactId>pitest-maven</artifactId>
	    <version>1.2.0</version>
	    <configuration>
	      <targetClasses>
	        <param>com.macasaet.fernet.*</param>
	      </targetClasses>
	      <targetTests>
	        <param>com.macasaet.fernet.*</param>
	      </targetTests>
	      <avoidCallsTo>
	        <avoidCallsTo>java.io.ByteArrayOutputStream</avoidCallsTo>
	      </avoidCallsTo>
	      <excludedMethods>
	        <excludedMethod>ByteArrayOutputStream</excludedMethod>
	      </excludedMethods>
	    </configuration>
	   </plugin>
    </plugins>
  </build>
<reporting>
    <plugins>
        <plugin>
            <groupId>org.pitest</groupId>
            <artifactId>pitest-maven</artifactId>
            <version>1.2.0</version>
            <reportSets>
                <reportSet>
                    <reports>
                        <report>report</report>
                    </reports>
                </reportSet>
            </reportSets>
        </plugin>
    </plugins>
</reporting>
</project>
